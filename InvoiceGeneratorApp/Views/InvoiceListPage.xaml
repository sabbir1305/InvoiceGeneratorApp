<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:InvoiceGeneratorApp.ViewModels"
             x:Class="InvoiceGeneratorApp.Views.InvoiceListPage"
             x:DataType="viewmodels:InvoiceListViewModel"
             Title="Invoices">

    <VerticalStackLayout Padding="20" Spacing="15">

        <!-- Page Header -->
        <Label Text="Saved Invoices" FontSize="28" FontAttributes="Bold" HorizontalOptions="Center" />

        <!-- Refresh Button -->
        <Button Text="Refresh" Command="{Binding LoadInvoicesCommand}" />

        <!-- Invoice List -->
        <CollectionView ItemsSource="{Binding Invoices}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="LightGray" CornerRadius="10" Padding="10" Margin="5">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:InvoiceListViewModel}}, Path=OpenInvoiceDetailCommand}" CommandParameter="{Binding .}" />
                        </Frame.GestureRecognizers>
                        <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                            <Label Grid.Row="0" Grid.Column="0" Text="{Binding InvoiceNumber}" FontAttributes="Bold" FontSize="18" />
                            <Label Grid.Row="0" Grid.Column="1" Text="{Binding Total, StringFormat='Total: {0:C}'}" TextColor="Green" HorizontalOptions="End" />
                            <Label Grid.Row="1" Grid.Column="0" Text="{Binding CustomerName}" TextColor="Gray" />
                            <Button Grid.Row="1" Grid.Column="1" Text="Delete" BackgroundColor="Red" TextColor="White"
                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:InvoiceListViewModel}}, Path=DeleteInvoiceCommand}"
                CommandParameter="{Binding .}" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Navigation to Create Invoice -->
        <Button Text="Create New Invoice"
                Clicked="OnCreateInvoiceClicked"
                BackgroundColor="#0078D7" TextColor="White" />

    </VerticalStackLayout>
</ContentPage>
