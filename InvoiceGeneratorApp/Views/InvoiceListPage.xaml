<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:InvoiceGeneratorApp.ViewModels"
             xmlns:models="clr-namespace:InvoiceGeneratorApp.Models"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="InvoiceGeneratorApp.Views.InvoiceListPage"
             x:DataType="viewmodels:InvoiceListViewModel"
             Title="Saved Invoices">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Refresh" Command="{Binding LoadInvoicesAsyncCommand}" />
    </ContentPage.ToolbarItems>

    <Grid>
        <!-- Scrollable list -->
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="15">
                <Label Text="Saved Invoices" FontSize="28" FontAttributes="Bold" HorizontalOptions="Center" />

                <CollectionView ItemsSource="{Binding Invoices}" SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate  x:DataType="models:Invoice">
                            <Border Stroke="LightGray"
                                    StrokeThickness="1"
                                    BackgroundColor="White"
                                    Padding="10"
                                    Margin="0,5">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10" />
                                </Border.StrokeShape>

                                <VerticalStackLayout>
                                    <Label Text="{Binding InvoiceNumber}" FontAttributes="Bold" FontSize="18" />
                                    <Label Text="{Binding CustomerName}" FontSize="14" />
                                    <Label Text="{Binding Date, StringFormat='Date: {0:dd MMM yyyy}'}" FontSize="14" />
                                    <Label Text="{Binding Total, StringFormat='Total: {0:C}'}" FontSize="14" TextColor="Green" />

                                    <!-- Expandable Items -->
                                    <toolkit:Expander>
                                        <toolkit:Expander.Header>
                                            <Label Text="View Items" TextColor="Blue" />
                                        </toolkit:Expander.Header>
                                        <toolkit:Expander.Content>
                                            <CollectionView ItemsSource="{Binding Items}" SelectionMode="None">
                                                <CollectionView.ItemTemplate>
                                                    <DataTemplate x:DataType="models:InvoiceItem">
                                                        <Grid ColumnDefinitions="2*,Auto,Auto" Padding="5">
                                                            <Label Grid.Column="0" Text="{Binding Description}" />
                                                            <Label Grid.Column="1" Text="{Binding Quantity}" HorizontalOptions="End" />
                                                            <Label Grid.Column="2" Text="{Binding Price, StringFormat='{}{0:C}'}" HorizontalOptions="End" />
                                                        </Grid>
                                                    </DataTemplate>
                                                </CollectionView.ItemTemplate>
                                            </CollectionView>
                                        </toolkit:Expander.Content>
                                    </toolkit:Expander>

                                    <!-- Buttons -->
                                    <HorizontalStackLayout Spacing="10" Margin="0,10,0,0">
                                        <Button Text="View Details"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:InvoiceListViewModel}}, Path=ViewDetailsCommand}"
                                                CommandParameter="{Binding .}" />

                                        <Button Text="Delete"
                                                BackgroundColor="Red" TextColor="White"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:InvoiceListViewModel}}, Path=DeleteInvoiceCommand}"
                                                CommandParameter="{Binding .}" />
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Floating Button -->
        <Button Text="+"
                Clicked="OnCreateInvoiceClicked"
                BackgroundColor="#0078D7" TextColor="White"
                FontSize="28"
                WidthRequest="60" HeightRequest="60"
                CornerRadius="30"
                VerticalOptions="End" HorizontalOptions="End"
                Margin="20" />
    </Grid>
</ContentPage>
